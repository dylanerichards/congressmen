			<li><strong>Phone</strong>: <%= @senator1.phone %></li>
			<li><strong>Email</strong>: <%= mail_to @senator1.oc_email %></li>
			<li><strong>Address</strong>: <%= @senator1.office %></li>
			<li><strong>State</strong>: <%= @senator1.state %></li>
			<li><strong>Website</strong>: <%= link_to @senator1.website, @senator1.website %></li>
			</ul>
		</div>
	</div>
	
